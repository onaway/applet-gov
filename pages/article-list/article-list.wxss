/* pages/article-list/article-list.wxss */
.article-list {
  min-height: 100vh;
}

.title {
  position: relative;
  height: 128rpx;
}

.title image {
  width: 100%;
  height: 128rpx;
}

.title text {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  font-size: 36rpx;
  font-weight: 500;
  color: #ffffff;
}

.search {
  height: 96rpx;
  margin: 24rpx 32rpx 0;
  padding: 24rpx;
  background: #ffffff;
  border: 2rpx solid #d0d4dc;
  border-radius: 16rpx;
}

.search image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.search input {
  width: 100%;
}

.list {
  margin-top: 24rpx;
}

.list-item {
  padding: 32rpx;
  border-bottom: 1px solid #e4e6eb;
}

.loading {
  height: calc(100vh - 64px - 48px - 12px);
}

.loading image {
  width: 80rpx;
  height: 80rpx;
  animation: loading 800ms linear infinite;
}

.has-more {
  height: 112rpx;
}

.has-more image {
  width: 50rpx;
  height: 50rpx;
  animation: loading 800ms linear infinite;
}

.has-more text {
  color: #92969e;
  line-height: 40px;
  margin-left: 16rpx;
}

.end {
  height: 112rpx;
  color: #92969e;
}

.no-data {
  flex-direction: column;
  padding-top: 224rpx;
}

.no-data image {
  width: 400rpx;
  height: 240rpx;
}

.no-data text {
  color: #61656d;
  line-height: 32rpx;
  margin-top: 24rpx;
}

.btn {
  position: fixed;
  right: 0;
  bottom: 112rpx;
  width: 208rpx;
  height: 72rpx;
  padding-left: 24rpx;
  background: #4c94fe;
  border-radius: 44rpx 0 0 44rpx; 
  box-shadow: 0px 8rpx 8rpx 0px rgba(0,0,0,0.05); 
}

.btn image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.btn text {
  color: #ffffff;
  line-height: 32px;
}