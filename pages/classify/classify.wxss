/* pages/appeal-classify/appeal-classify.wxss */
.title {
  font-size: 40rpx;
  text-align: center;
  line-height: 46rpx;
  margin-top: 48rpx;
}

.appeal-menu {
  display: flex;
  flex-wrap: wrap;
  margin-top: 48rpx;
  padding: 0 32rpx;
}

.appeal-item {
  display: flex;
  flex-direction: column;
  margin: 0 68rpx 32rpx 0;
}

.appeal-item:nth-child(4n) {
  margin-right: 0;
}

.appeal-item image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
}

.appeal-item text {
  line-height: 40rpx;
  margin-top: 8rpx;
}